<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/turn_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="429dp"
        android:layout_height="56dp"
        android:background="@drawable/cssbackgroundnavbaruser"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menunavbottom_user" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="413dp"
        android:layout_height="74dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.SearchView
            android:id="@+id/user_search_film"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:background="@drawable/csssearchviewuser" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="416dp"
        android:layout_height="171dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="198dp">

                <ImageView
                    android:id="@+id/image_film_new_1"
                    android:layout_width="120dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/hinhphim1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="198dp">

                <ImageView
                    android:id="@+id/image_film_new_2"
                    android:layout_width="120dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/hinhphim2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="198dp">

                <ImageView
                    android:id="@+id/image_film_new_3"
                    android:layout_width="120dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/hinhphim3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="198dp">

                <ImageView
                    android:id="@+id/image_film_new_4"
                    android:layout_width="120dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/hinhphim4" />

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:layout_marginLeft="20dp"
        android:text="PHIM HOT SẮP CHIẾU"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:layout_marginLeft="20dp"
        android:text="PHIM ĐANG CHIẾU"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <ListView
        android:id="@+id/listview_user_home"
        android:layout_width="439dp"
        android:layout_height="278dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.687" />


</android.support.constraint.ConstraintLayout>