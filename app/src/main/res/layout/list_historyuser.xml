<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#303030"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:background="@drawable/cssbackgroundforlisthistory"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTenPhimFilmUser"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="Tên phim"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textNgayDatFilmUser"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="2024-12-12"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textGheFilmUser"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="Ghế"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textTienFilmUser"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="4000000.0"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>