<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/turn_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="CHI TIẾT VÉ"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="472dp"
        android:layout_height="61dp"
        android:background="@drawable/cssbackgroundnavbaruser"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menunavbottom_user" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="551dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="match_parent"
            android:layout_height="272dp"
            app:srcCompat="@drawable/hinhphim1" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="RẠP"
                android:textColor="#BDBDBD"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txthistorydetailcinemaname"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:text="Tên rạp"
                android:textColor="#3B3B3B"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="30dp"
                android:text="PHÒNG"
                android:textColor="#BDBDBD"
                android:textSize="30dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txthistorydetailroomname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="70dp"
                android:text="Tên phòng"
                android:textColor="#3B3B3B"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="30dp"
                android:text="GHẾ"
                android:textColor="#BDBDBD"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txthistorydetailseatname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="310dp"
                android:layout_marginTop="70dp"
                android:text="Tên ghế"
                android:textColor="#3B3B3B"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="160dp"
                android:text="GIÁ"
                android:textColor="#BDBDBD"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txthistorydetailprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="210dp"
                android:text="GIÁ TIỀN"
                android:textColor="#3B3B3B"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="160dp"
                android:text="NGÀY"
                android:textColor="#BDBDBD"
                android:textSize="30dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txthistorydetaildate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="210dp"
                android:text="Ngày chiếu"
                android:textColor="#3B3B3B"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="160dp"
                android:text="GIỜ"
                android:textColor="#BDBDBD"
                android:textSize="30dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txthistorydetailtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="310dp"
                android:layout_marginTop="210dp"
                android:text="Giờ chiếu"
                android:textColor="#3B3B3B"
                android:textSize="20dp"
                android:textStyle="bold"  />
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <ImageView
        android:id="@+id/btnturnbackhistory"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/turnback" />

</android.support.constraint.ConstraintLayout>