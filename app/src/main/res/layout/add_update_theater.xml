<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E8FFF4"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="155dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:text="Tên rạp :"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/turn_back_managefilm" />

    <TextView
        android:id="@+id/thongtin"
        android:layout_width="155dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Địa chỉ :"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/thongtin2"
        android:layout_width="155dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="Số điện thoại :"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thongtin" />

    <ImageView
        android:id="@+id/turn_back_managefilm"
        android:layout_width="55dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="THÔNG TIN RẠP"
        android:textColor="#5a25cf"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_themrap"
        android:layout_width="161dp"
        android:layout_height="47dp"
        android:layout_marginBottom="268dp"
        android:background="@drawable/cssbuttonpagethemsuaquanli"
        android:text="Thêm"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_suarap"
        android:layout_width="161dp"
        android:layout_height="47dp"
        android:layout_marginBottom="268dp"
        android:background="@drawable/cssbuttonpagethemsuaquanli"
        android:text="Sửa"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/Thongtinraptenrap"
        android:layout_width="209dp"
        android:layout_height="47dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:hint="Nhập tên rạp..."
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/thongtinrapdiachi"
        android:layout_width="209dp"
        android:layout_height="47dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Nhập địa chỉ rạp..."
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/thongtin"
        app:layout_constraintTop_toBottomOf="@+id/Thongtinraptenrap" />

    <EditText
        android:id="@+id/thongtinrapsdt"
        android:layout_width="209dp"
        android:layout_height="47dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Nhập số diện thoại..."
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/thongtin2"
        app:layout_constraintTop_toBottomOf="@+id/thongtinrapdiachi" />

</android.support.constraint.ConstraintLayout>